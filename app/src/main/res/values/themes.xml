<resources>
    <!-- Base application theme. -->
    <style name="Theme.OpenRoom" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#246bfd</item>
        <item name="colorPrimaryVariant">#1b1464</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0834a9</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorHint">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">#A6FFFFFF</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColorHint">#78909C</item>
    </style>

    <style name="TextHeader" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="MyCheckBox" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorControlActivated">#246bfd</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

</resources>